<%- include("./partials/head.ejs")  %>
  <body>
    <%- include("./partials/header.ejs")  %>
    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%=producto.nombre%></h1>
          <br />
          <h4><%=producto.descripcion ? producto.descripcion:'Plato tipico'%></h4>
          <p class="ps-text-grey">
            $<%=producto.precio %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= producto.imagen ? producto.imagen: "default.jpg"%>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include("./partials/footer.ejs")  %>
    </div>
  </body>
</html>
